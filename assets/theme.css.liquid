.product-card__image {
    transition: opacity 0.3s ease;
}
.product-card button:after {
    content: '';
    border: 1px solid #FFF;
    position: absolute;
    width: calc(100% + 4px);
    height: calc(100% + 4px);
    left: -2px;
    top: -2px;
    border-radius: 100%;
}
.product-card button:hover:after {
    border-color: #0A4874;
}